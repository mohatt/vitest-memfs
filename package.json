{
  "name": "vitest-memfs",
  "version": "1.0.0",
  "description": "Custom Vitest matchers for working with memfs",
  "keywords": [
    "vitest",
    "memfs",
    "test",
    "testing",
    "mock",
    "matchers",
    "fs",
    "file",
    "filesystem",
    "file system",
    "memory",
    "virtual",
    "in-memory"
  ],
  "homepage": "https://github.com/mohatt/vitest-memfs",
  "bugs": "https://github.com/mohatt/vitest-memfs/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohatt/vitest-memfs.git"
  },
  "license": "MIT",
  "author": "Mohamed Elkholy <mohatt@pm.me>",
  "sideEffects": [
    "./dist/setup.js",
    "./dist/setup.cjs"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "require": "./dist/setup.cjs",
      "import": "./dist/setup.js"
    },
    "./matchers": {
      "types": "./dist/matchers/index.d.ts",
      "require": "./dist/matchers/index.cjs",
      "import": "./dist/matchers/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "matchers": [
        "./dist/matchers/index.d.ts"
      ],
      "setup": [
        "./dist/setup.d.ts"
      ],
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --clean-dist --sourcemap --target node18",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "prepare": "NODE_ENV=production pnpm build",
    "release": "semantic-release --no-ci",
    "release:inspect": "semantic-release --dry-run",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -p . --noEmit"
  },
  "dependencies": {
    "istextorbinary": "^9.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.17",
    "@vitest/coverage-v8": "^3.2.4",
    "fs-extra": "^11.3.2",
    "memfs": "^4.25.0",
    "pkgroll": "^2.15.4",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "semantic-release": "^24.2.8",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "memfs": "^4.10",
    "vitest": "^3"
  },
  "engines": {
    "node": ">=18"
  }
}
